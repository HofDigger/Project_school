<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/load"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan">

    <ProgressBar
        android:id="@+id/loading_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="345dp"
        android:layout_height="46dp"
        android:layout_below="@id/book_loading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_loading" />

    <ImageView
        android:id="@+id/book_loading"
        android:layout_width="752dp"
        android:layout_height="543dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b43d438638e2ed51d1f19dad2a4eb24d" />

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="301dp"
        android:layout_height="39dp"
        android:layout_below="@id/loading_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Loading your library..."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loading_bar" />


</androidx.constraintlayout.widget.ConstraintLayout>